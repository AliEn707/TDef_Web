<%=simple_form_for Message.new do |f|%>
	<%=f.input_field :user_id, as: :hidden,  value: current_user.id%>
	<%=f.input_field :msg_dest_type, as: :hidden,  value: @type%>
	<%=f.input_field :msg_dest_id, as: :hidden,  value: @id%>
	<%=f.input :data, label: "Message"%>
	<%=f.submit%>

<%end%>

<script src="<%= message_path(id: @id, type: @type, from: @messages[0].created_at.to_i+1 )%>"></script>