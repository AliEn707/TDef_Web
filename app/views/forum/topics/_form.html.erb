<%= simple_form_for(@forum_topic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :user_id %>
    <%= f.input :closed %>
    <%= f.input :topicable_id %>
    <%= f.input :topicable_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
