<%= simple_form_for(@forum_topic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.hidden_field :topicable_id, value: @data["id"] %>
    <%= f.hidden_field :topicable_type, value: @data["type"] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
